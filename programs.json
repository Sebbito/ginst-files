{
    "programs": [
        {
            "name": "fish",
            "installation": {
                "Fedora Linux,Nobara": [
                    "sudo dnf install -y fish"
                ]
            },
            "configuration": {
                "*": [
                    "chsh -s /usr/bin/fish"
                ]
            }
        },
        {
            "name": "lvim",
            "installation": {
                "Fedora Linux,Nobara": [
                    "LV_BRANCH='release-1.2/neovim-0.8' bash <(curl -s https://raw.githubusercontent.com/lunarvim/lunarvim/fc6873809934917b470bff1b072171879899a36b/utils/installer/install.sh) -- --yes"
                ]
            },
            "dependencies": {
                "programs": [
                    {
                        "name": "nvim",
                        "installation": {
                            "Fedora Linux,Nobara": [
                                "sudo dnf install -y neovim"
                            ]
                        }
                    },
                    {
                        "name": "git",
                        "installation": {
                            "Fedora Linux,Nobara": [
                                "sudo dnf install -y git"
                            ]
                        }
                    },
                    {
                        "name": "make"
                    },
                    {
                        "name": "pip"
                    },
                    {
                        "name": "python3"
                    },
                    {
                        "name": "npm"
                    },
                    {
                        "name": "node"
                    },
                    {
                        "name": "cargo",
                        "installation": {
                            "Fedora Linux,Nobara": [
                                "curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y"
                            ]
                        }
                    }
                ]
            }
        },
        {
            "name": "kitty",
            "installation": {
                "Fedora Linux,Nobara": [
                    "sudo dnf install -y kitty"
                ]
            }
        }
    ]
}
